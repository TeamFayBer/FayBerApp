<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_details">

    <ImageView
        android:id="@+id/ivImage1"
        android:layout_width="match_parent"
        android:layout_height="206dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="24dp"
        android:scaleType="centerCrop"
        android:scrollbarSize="@android:dimen/app_icon_size"
        app:srcCompat="@drawable/diete"
        tools:ignore="ContentDescription" />

    <TextView
        android:id="@+id/tvDetails"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/tvtitle4detail"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="11dp"
        android:textStyle="italic"
        android:text="Soins et procédés visant à assurer l’hygiène corporelle du patient/client et de son environnement."
        android:textColor="#2f3a3f"
        android:textSize="18sp" />

    <Button
        android:id="@+id/btnRegister"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="37dp"
        android:background="@color/colorPrimary"
        android:onClick="onLogButton"
        android:textStyle="bold"
        android:text="CHoose Service"
        android:textColor="?attr/colorBackgroundFloating"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/tvtitle4detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/ivImage1"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="16sp"
        android:gravity="center"
        android:text="Surveillance des diètes"
        android:textColor="#14313c"
        android:textSize="24sp"
        android:textStyle="bold" />

</RelativeLayout>
