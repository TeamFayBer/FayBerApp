<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="codepath.fayberapp">

    <application
        android:allowBackup="true"
        android:icon="@drawable/fayber"
        android:label="FayBerApp"
        android:roundIcon="@drawable/fayber"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="Activities.FayActivity"
            android:label="FayBerApp"
            android:theme="@style/AppTheme.NoActionBar"></activity>
        <activity android:name="Activities.LaunchActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="Activities.DetailsActivity"></activity>
    </application>

</manifest>