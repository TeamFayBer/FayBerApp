<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">

    <ImageView
        android:id="@+id/ivImage1"
        android:layout_width="match_parent"
        android:layout_height="206dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="24dp"
        android:scaleType="centerCrop"
        android:scrollbarSize="@android:dimen/app_icon_size"
        app:srcCompat="@mipmap/ic_diete"
        tools:ignore="ContentDescription" />

    <TextView
        android:id="@+id/tvDetails"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="11dp"
        android:text="Soins et procédés visant à assurer l’hygiène corporelle du patient/client et de son environnement."
        android:textColor="@android:color/background_dark"
        android:textSize="14sp"
        android:layout_below="@+id/tvtitle4detail"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/btnRegister"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_gravity="center"
        android:layout_marginBottom="22dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:background="@color/colorPrimary"
        android:onClick="onLogButton"
        android:text="Choisir"
        android:textColor="?attr/colorBackgroundFloating"
        android:textSize="14sp"
        tools:ignore="HardcodedText,ObsoleteLayoutParam,UnusedAttribute" />

    <TextView
        android:id="@+id/tvtitle4detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/ivImage1"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16sp"
        android:text="Surveillance des diètes"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="18sp" />

